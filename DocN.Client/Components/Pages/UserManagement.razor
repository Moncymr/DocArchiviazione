@page "/admin/users"
@using System.Net.Http.Json
@using DocN.Data.Constants
@inject IHttpClientFactory HttpClientFactory
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject ILogger<UserManagement> Logger
@attribute [Microsoft.AspNetCore.Authorization.Authorize(Roles = "SuperAdmin,TenantAdmin")]
@rendermode InteractiveServer

<PageTitle>Gestione Utenti - DocN</PageTitle>

<div class="user-management-container">
    <div class="header">
        <div class="header-left">
            <h2>üë• Gestione Utenti</h2>
            <p class="subtitle">Gestisci utenti e assegna ruoli</p>
        </div>
        <div class="header-right">
            <div class="search-box">
                <input type="text" 
                       placeholder="üîç Cerca utenti..." 
                       @bind="_searchQuery"
                       @bind:event="oninput"
                       @onkeyup="SearchUsers" />
            </div>
        </div>
    </div>

    @if (_isLoading)
    {
        <div class="loading">
            <div class="spinner"></div>
            <p>Caricamento utenti...</p>
        </div>
    }
    else if (!string.IsNullOrEmpty(_errorMessage))
    {
        <div class="alert alert-error">
            <strong>‚ö†Ô∏è Errore</strong>
            <p>@_errorMessage</p>
        </div>
    }
    else
    {
        <!-- Statistics Cards -->
        <div class="stats-grid">
            <div class="stat-card">
                <div class="stat-icon">üë•</div>
                <div class="stat-info">
                    <h3>@_totalUsers</h3>
                    <p>Utenti Totali</p>
                </div>
            </div>
            <div class="stat-card">
                <div class="stat-icon">‚úÖ</div>
                <div class="stat-info">
                    <h3>@_activeUsers</h3>
                    <p>Utenti Attivi</p>
                </div>
            </div>
            <div class="stat-card">
                <div class="stat-icon">üë®‚Äçüíº</div>
                <div class="stat-info">
                    <h3>@_adminUsers</h3>
                    <p>Amministratori</p>
                </div>
            </div>
            <div class="stat-card">
                <div class="stat-icon">üìä</div>
                <div class="stat-info">
                    <h3>@_powerUsers</h3>
                    <p>Power Users</p>
                </div>
            </div>
        </div>

        <!-- Role Filter -->
        <div class="filter-section">
            <span class="filter-label">Filtra per ruolo:</span>
            <div class="filter-buttons">
                <button class="filter-btn @(_selectedRole == null ? "active" : "")" 
                        @onclick="() => FilterByRole(null)">
                    Tutti
                </button>
                @foreach (var role in Roles.All)
                {
                    <button class="filter-btn @(_selectedRole == role ? "active" : "")" 
                            @onclick="() => FilterByRole(role)">
                        @GetRoleIcon(role) @role
                    </button>
                }
            </div>
        </div>

        <!-- Users Table -->
        <div class="users-table-container">
            <table class="users-table">
                <thead>
                    <tr>
                        <th>Utente</th>
                        <th>Email</th>
                        <th>Ruolo</th>
                        <th>Stato</th>
                        <th>Ultimo Accesso</th>
                        <th>Azioni</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in _filteredUsers)
                    {
                        <tr class="@(!user.IsActive ? "inactive" : "")">
                            <td>
                                <div class="user-cell">
                                    <div class="user-avatar">
                                        @GetInitials(user.FirstName, user.LastName)
                                    </div>
                                    <div class="user-info">
                                        <strong>@(user.FirstName) @(user.LastName)</strong>
                                        <small>@user.UserName</small>
                                    </div>
                                </div>
                            </td>
                            <td>@user.Email</td>
                            <td>
                                @if (_editingUserId == user.Id)
                                {
                                    <select class="role-select" @bind="_selectedNewRole">
                                        @foreach (var role in Roles.All)
                                        {
                                            <option value="@role" selected="@(role == user.Role)">
                                                @GetRoleIcon(role) @role
                                            </option>
                                        }
                                    </select>
                                }
                                else
                                {
                                    <span class="role-badge @GetRoleBadgeClass(user.Role)">
                                        @GetRoleIcon(user.Role) @user.Role
                                    </span>
                                }
                            </td>
                            <td>
                                <span class="status-badge @(user.IsActive ? "active" : "inactive")">
                                    @(user.IsActive ? "‚úì Attivo" : "‚äó Inattivo")
                                </span>
                            </td>
                            <td>
                                @if (user.LastLoginAt.HasValue)
                                {
                                    <span>@user.LastLoginAt.Value.ToString("dd/MM/yyyy HH:mm")</span>
                                }
                                else
                                {
                                    <span class="text-muted">Mai</span>
                                }
                            </td>
                            <td>
                                <div class="action-buttons">
                                    @if (_editingUserId == user.Id)
                                    {
                                        <button class="btn-action btn-save" @onclick="async () => await SaveRole(user)" title="Salva">
                                            üíæ
                                        </button>
                                        <button class="btn-action btn-cancel" @onclick="CancelEdit" title="Annulla">
                                            ‚úï
                                        </button>
                                    }
                                    else
                                    {
                                        <button class="btn-action" @onclick="() => EditRole(user)" title="Modifica ruolo">
                                            ‚úèÔ∏è
                                        </button>
                                        <button class="btn-action @(user.IsActive ? "btn-danger" : "btn-success")" 
                                                @onclick="async () => await ToggleUserStatus(user)" 
                                                title="@(user.IsActive ? "Disattiva" : "Attiva")">
                                            @(user.IsActive ? "üîí" : "üîì")
                                        </button>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            @if (!_filteredUsers.Any())
            {
                <div class="empty-state">
                    <div class="empty-icon">üîç</div>
                    <h3>Nessun utente trovato</h3>
                    <p>Prova a modificare i filtri di ricerca</p>
                </div>
            }
        </div>
    }
</div>

@code {
    private List<UserDto> _users = new();
    private List<UserDto> _filteredUsers = new();
    private bool _isLoading = true;
    private string? _errorMessage;
    private string _searchQuery = string.Empty;
    private string? _selectedRole = null;
    private string? _editingUserId = null;
    private string _selectedNewRole = string.Empty;
    private HttpClient? _httpClient;

    // Statistics
    private int _totalUsers => _users.Count;
    private int _activeUsers => _users.Count(u => u.IsActive);
    private int _adminUsers => _users.Count(u => u.Role == Roles.SuperAdmin || u.Role == Roles.TenantAdmin);
    private int _powerUsers => _users.Count(u => u.Role == Roles.PowerUser);

    protected override async Task OnInitializedAsync()
    {
        _httpClient = HttpClientFactory.CreateClient("BackendAPI");
        await LoadUsers();
    }

    private async Task LoadUsers()
    {
        _isLoading = true;
        _errorMessage = null;

        try
        {
            var response = await _httpClient!.GetFromJsonAsync<List<UserDto>>("api/users");
            if (response != null)
            {
                _users = response;
                ApplyFilters();
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error loading users");
            _errorMessage = "Errore nel caricamento degli utenti. Verifica che il server sia in esecuzione.";
        }
        finally
        {
            _isLoading = false;
        }
    }

    private void SearchUsers()
    {
        ApplyFilters();
    }

    private void FilterByRole(string? role)
    {
        _selectedRole = role;
        ApplyFilters();
    }

    private void ApplyFilters()
    {
        _filteredUsers = _users.AsEnumerable();

        // Apply search filter
        if (!string.IsNullOrWhiteSpace(_searchQuery))
        {
            var query = _searchQuery.ToLower();
            _filteredUsers = _filteredUsers.Where(u =>
                u.FirstName?.ToLower().Contains(query) == true ||
                u.LastName?.ToLower().Contains(query) == true ||
                u.Email?.ToLower().Contains(query) == true ||
                u.UserName?.ToLower().Contains(query) == true
            ).ToList();
        }

        // Apply role filter
        if (!string.IsNullOrEmpty(_selectedRole))
        {
            _filteredUsers = _filteredUsers.Where(u => u.Role == _selectedRole).ToList();
        }

        StateHasChanged();
    }

    private void EditRole(UserDto user)
    {
        _editingUserId = user.Id;
        _selectedNewRole = user.Role ?? Roles.User;
        StateHasChanged();
    }

    private void CancelEdit()
    {
        _editingUserId = null;
        _selectedNewRole = string.Empty;
        StateHasChanged();
    }

    private async Task SaveRole(UserDto user)
    {
        if (_httpClient == null) return;

        try
        {
            var updateData = new { userId = user.Id, role = _selectedNewRole };
            var response = await _httpClient.PutAsJsonAsync($"api/users/{user.Id}/role", updateData);

            if (response.IsSuccessStatusCode)
            {
                user.Role = _selectedNewRole;
                _editingUserId = null;
                _selectedNewRole = string.Empty;
                StateHasChanged();
            }
            else
            {
                _errorMessage = "Errore nell'aggiornamento del ruolo";
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error updating user role");
            _errorMessage = "Errore nell'aggiornamento del ruolo";
        }
    }

    private async Task ToggleUserStatus(UserDto user)
    {
        if (_httpClient == null) return;

        try
        {
            var updateData = new { userId = user.Id, isActive = !user.IsActive };
            var response = await _httpClient.PutAsJsonAsync($"api/users/{user.Id}/status", updateData);

            if (response.IsSuccessStatusCode)
            {
                user.IsActive = !user.IsActive;
                StateHasChanged();
            }
            else
            {
                _errorMessage = "Errore nell'aggiornamento dello stato utente";
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error toggling user status");
            _errorMessage = "Errore nell'aggiornamento dello stato utente";
        }
    }

    private string GetInitials(string? firstName, string? lastName)
    {
        var initials = "";
        if (!string.IsNullOrEmpty(firstName))
            initials += firstName[0];
        if (!string.IsNullOrEmpty(lastName))
            initials += lastName[0];
        return string.IsNullOrEmpty(initials) ? "?" : initials.ToUpper();
    }

    private string GetRoleIcon(string? role)
    {
        return role switch
        {
            Roles.SuperAdmin => "üëë",
            Roles.TenantAdmin => "üë®‚Äçüíº",
            Roles.PowerUser => "‚ö°",
            Roles.User => "üë§",
            Roles.ReadOnly => "üëÅÔ∏è",
            _ => "‚ùì"
        };
    }

    private string GetRoleBadgeClass(string? role)
    {
        return role switch
        {
            Roles.SuperAdmin => "super-admin",
            Roles.TenantAdmin => "tenant-admin",
            Roles.PowerUser => "power-user",
            Roles.User => "user",
            Roles.ReadOnly => "read-only",
            _ => ""
        };
    }

    // DTO Classes
    public class UserDto
    {
        public string Id { get; set; } = string.Empty;
        public string? UserName { get; set; }
        public string? Email { get; set; }
        public string? FirstName { get; set; }
        public string? LastName { get; set; }
        public string? Role { get; set; }
        public bool IsActive { get; set; }
        public DateTime? LastLoginAt { get; set; }
    }
}

