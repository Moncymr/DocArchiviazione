                        Content = result.Answer,
                        Timestamp = DateTime.UtcNow,
                        ReferencedDocumentIds = result.SourceDocuments.Select(d => d.DocumentId).ToList(),
                        Metadata = System.Text.Json.JsonSerializer.Serialize(metadata)
