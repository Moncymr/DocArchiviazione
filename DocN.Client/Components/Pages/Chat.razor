                            var chunk = source.TryGetProperty("relevant_chunk", out var chunkProp) 
                                ? chunkProp.GetString() ?? string.Empty
                                : string.Empty;
                            return (score, chunk);
                        }
                    }
                }
            }
        }
        catch (System.Text.Json.JsonException)
