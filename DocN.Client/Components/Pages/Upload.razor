@page "/upload"
@using Microsoft.AspNetCore.Components.Forms
@using System.Net.Http.Headers
@inject IHttpClientFactory HttpClientFactory
@inject NavigationManager Navigation
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject ILogger<Upload> Logger
@rendermode InteractiveServer

<PageTitle>Upload Document - DocN</PageTitle>

<div class="upload-container">
    <div class="upload-header">
        <h2>üì§ Upload Document</h2>
        <button class="btn btn-secondary" @onclick="GoBack">
            ‚Üê Back to Documents
        </button>
    </div>

    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-error">
            ‚ùå @errorMessage
        </div>
    }

    @if (!string.IsNullOrEmpty(successMessage))
    {
        <div class="alert alert-success">
            ‚úÖ @successMessage
        </div>
    }

    <div class="upload-card">
        <EditForm Model="@uploadModel" OnValidSubmit="HandleUpload">
            <!-- File Selection -->
            <div class="form-section">
                <h3>Select File</h3>
                <div class="file-upload-wrapper">
                    <InputFile OnChange="OnFileSelected" class="file-input" id="fileInput" accept=".pdf,.doc,.docx,.txt,.xlsx,.xls,.png,.jpg,.jpeg" />
                    <label for="fileInput" class="file-upload-button">
                        <span class="upload-icon">üìÅ</span>
                        <span>@(selectedFile != null ? selectedFile.Name : "Choose a file...")</span>
                    </label>
                    @if (selectedFile != null)
                    {
                        <div class="file-info">
                            <span>üìÑ @selectedFile.Name</span>
                            <span>üíæ @FormatFileSize(selectedFile.Size)</span>
                        </div>
                    }
                </div>
                <small class="form-help">Supported formats: PDF, Word, Excel, Text, Images (PNG, JPG). Max size: 50 MB</small>
            </div>

            <!-- Category -->
            <div class="form-section">
                <h3>Category</h3>
                <div class="form-group">
                    <label>Document Category</label>
                    <InputText @bind-Value="uploadModel.Category" class="form-control" placeholder="e.g., Contracts, Reports, Technical..." />
                    <small class="form-help">Optional - helps organize your documents</small>
                </div>
            </div>

            <!-- Visibility -->
            <div class="form-section">
                <h3>Visibility</h3>
                <div class="form-group">
                    <label>Who can access this document?</label>
                    <InputSelect @bind-Value="uploadModel.Visibility" class="form-control">
                        <option value="0">Private (Only me)</option>
                        <option value="1">Internal (My organization)</option>
                        <option value="2">Public (Everyone)</option>
                    </InputSelect>
                </div>
            </div>

            <!-- Notes -->
            <div class="form-section">
                <h3>Notes</h3>
                <div class="form-group">
                    <label>Additional Notes</label>
                    <InputTextArea @bind-Value="uploadModel.Notes" class="form-control" rows="3" placeholder="Add any notes about this document..." />
                </div>
            </div>

            <!-- Actions -->
            <div class="form-actions">
                <button type="submit" class="btn btn-primary" disabled="@(isUploading || selectedFile == null)">
                    @if (isUploading)
                    {
                        <span>‚è≥ Uploading...</span>
                    }
                    else
                    {
                        <span>üì§ Upload Document</span>
                    }
                </button>
                <button type="button" class="btn btn-secondary" @onclick="Cancel" disabled="@isUploading">
                    Cancel
                </button>
            </div>

            @if (isUploading)
            {
                <div class="upload-progress">
                    <div class="progress-bar">
                        <div class="progress-fill" style="width: @uploadProgress%"></div>
                    </div>
                    <p>@uploadProgress% - @uploadStatus</p>
                </div>
            }
        </EditForm>
    </div>
</div>

@code {
    private class UploadModel
    {
        public string Category { get; set; } = "General";
        public int Visibility { get; set; } = 0; // Private by default
        public string Notes { get; set; } = "";
    }

    private UploadModel uploadModel = new();
    private IBrowserFile? selectedFile;
    private bool isUploading = false;
    private string errorMessage = "";
    private string successMessage = "";
    private int uploadProgress = 0;
    private string uploadStatus = "Preparing upload...";

    private void OnFileSelected(InputFileChangeEventArgs e)
    {
        selectedFile = e.File;
        errorMessage = "";
        successMessage = "";

        // Validate file size
        if (selectedFile.Size > 52428800) // 50 MB
        {
            errorMessage = "File size exceeds maximum limit of 50 MB";
            selectedFile = null;
        }
    }

    private async Task HandleUpload()
    {
        if (selectedFile == null)
        {
            errorMessage = "Please select a file to upload";
            return;
        }

        isUploading = true;
        errorMessage = "";
        successMessage = "";
        uploadProgress = 0;
        uploadStatus = "Preparing upload...";

        try
        {
            var httpClient = HttpClientFactory.CreateClient("BackendAPI");

            // Create multipart form data
            using var content = new MultipartFormDataContent();

            // Add file
            uploadStatus = "Reading file...";
            uploadProgress = 10;
            StateHasChanged();

            var fileStream = selectedFile.OpenReadStream(maxAllowedSize: 52428800);
            var streamContent = new StreamContent(fileStream);
            streamContent.Headers.ContentType = new MediaTypeHeaderValue(selectedFile.ContentType);
            content.Add(streamContent, "file", selectedFile.Name);

            // Add other form fields
            content.Add(new StringContent(uploadModel.Category), "category");
            content.Add(new StringContent(uploadModel.Visibility.ToString()), "visibility");
            if (!string.IsNullOrEmpty(uploadModel.Notes))
            {
                content.Add(new StringContent(uploadModel.Notes), "notes");
            }

            uploadStatus = "Uploading to server...";
            uploadProgress = 30;
            StateHasChanged();

            // Upload to server
            var response = await httpClient.PostAsync("Documents/upload", content);

            uploadProgress = 80;
            uploadStatus = "Processing...";
            StateHasChanged();

            if (response.IsSuccessStatusCode)
            {
                uploadProgress = 100;
                uploadStatus = "Upload complete!";
                successMessage = $"Document '{selectedFile.Name}' uploaded successfully!";
                
                Logger.LogInformation("Document uploaded successfully: {FileName}", selectedFile.Name);

                // Wait a moment to show success message
                await Task.Delay(1500);

                // Navigate to documents page
                Navigation.NavigateTo("/documents");
            }
            else
            {
                var errorContent = await response.Content.ReadAsStringAsync();
                errorMessage = $"Upload failed. Please try again.";
                Logger.LogError("Upload failed: {StatusCode} - {Error}", response.StatusCode, errorContent);
            }
        }
        catch (Exception ex)
        {
            errorMessage = "An error occurred during upload. Please try again.";
            Logger.LogError(ex, "Error uploading document");
        }
        finally
        {
            isUploading = false;
            StateHasChanged();
        }
    }

    private void Cancel()
    {
        Navigation.NavigateTo("/documents");
    }

    private void GoBack()
    {
        Navigation.NavigateTo("/documents");
    }

    private string FormatFileSize(long bytes)
    {
        string[] sizes = { "B", "KB", "MB", "GB" };
        double len = bytes;
        int order = 0;
        while (len >= 1024 && order < sizes.Length - 1)
        {
            order++;
            len = len / 1024;
        }
        return $"{len:0.##} {sizes[order]}";
    }
}

