@page "/upload"
@using Microsoft.AspNetCore.Components.Forms
@using System.Net.Http.Headers
@using System.Text.Json
@inject IHttpClientFactory HttpClientFactory
@inject NavigationManager Navigation
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject ILogger<Upload> Logger
@* @rendermode InteractiveServer - DISABLED to prevent crash *@

<PageTitle>Upload Document - DocN</PageTitle>

<div class="upload-container">
    <div class="upload-header">
        <h2>üì§ Upload Document</h2>
        <button class="btn btn-secondary" @onclick="GoBack">
            ‚Üê Back to Documents
        </button>
    </div>

    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-error">
            ‚ùå @errorMessage
        </div>
    }

    @if (!string.IsNullOrEmpty(successMessage))
    {
        <div class="alert alert-success">
            ‚úÖ @successMessage
        </div>
    }

    <div class="upload-card">
        <EditForm Model="@uploadModel" OnValidSubmit="HandleUpload">
            <!-- File Selection -->
            <div class="form-section">
                <h3>Select File</h3>
                <div class="file-upload-wrapper">
                    <InputFile OnChange="OnFileSelected" class="file-input" id="fileInput" accept=".pdf,.doc,.docx,.txt,.xlsx,.xls,.png,.jpg,.jpeg" />
                    <label for="fileInput" class="file-upload-button">
                        <span class="upload-icon">üìÅ</span>
                        <span>@(selectedFile != null ? selectedFile.Name : "Choose a file...")</span>
                    </label>
                    @if (selectedFile != null)
                    {
                        <div class="file-info">
                            <span>üìÑ @selectedFile.Name</span>
                            <span>üíæ @FormatFileSize(selectedFile.Size)</span>
                        </div>
                    }
                </div>
                <small class="form-help">Supported formats: PDF, Word, Excel, Text, Images (PNG, JPG). Max size: 50 MB</small>
            </div>

            @* Show Analyze Button when file is selected and not yet analyzed *@
            @if (selectedFile != null && !processingComplete && !isAnalyzing)
            {
                <div class="analyze-button-section">
                    <div class="analyze-instruction">
                        <h3 style="color: #48bb78; margin: 0 0 0.5rem 0; font-size: 1.2rem;">
                            üëá Clicca qui per analizzare il documento prima del caricamento üëá
                        </h3>
                        <p style="color: #666; font-size: 0.9rem; margin: 0;">
                            L'analisi AI estrarr√† il testo, suggerir√† una categoria e generer√† tag automaticamente
                        </p>
                    </div>
                    <button type="button" class="btn btn-analyze-large" @onclick="AnalyzeDocument">
                        <span>üî¨ Analizza Documento</span>
                    </button>
                </div>
            }

            @* Show analyzing status *@
            @if (isAnalyzing)
            {
                <div class="analyzing-section">
                    <div class="spinner-large"></div>
                    <p>üîÑ Analisi del documento in corso...</p>
                    <p class="analysis-steps">
                        ‚úì Estrazione testo<br/>
                        ‚úì Generazione embeddings<br/>
                        ‚úì Proposta categoria con motivazione<br/>
                        ‚úì Estrazione tag e metadati
                    </p>
                </div>
            }

            @* Show analysis results after processing is complete *@
            @if (showAnalysisSection && processingComplete)
            {
                <div class="analysis-results-preview">
                    <h3>üìä Anteprima Analisi Documento</h3>
                    
                    @if (analysisResult != null)
                    {
                        @if (!string.IsNullOrEmpty(analysisResult.SuggestedCategory))
                        {
                            <div class="analysis-section">
                                <h4>üìÅ Categoria Suggerita</h4>
                                <div class="category-suggestion">
                                    <span class="category-name">@analysisResult.SuggestedCategory</span>
                                    @if (!string.IsNullOrEmpty(analysisResult.CategoryReasoning))
                                    {
                                        <p class="category-reasoning">@analysisResult.CategoryReasoning</p>
                                    }
                                </div>
                            </div>
                        }

                        @if (analysisResult.Tags != null && analysisResult.Tags.Any())
                        {
                            <div class="analysis-section">
                                <h4>üîñ Tag Estratti</h4>
                                <div class="tags-container">
                                    @foreach (var tag in analysisResult.Tags)
                                    {
                                        <span class="tag">@tag</span>
                                    }
                                </div>
                            </div>
                        }

                        @if (!string.IsNullOrEmpty(analysisResult.ExtractedText))
                        {
                            <div class="analysis-section">
                                <h4>üìÑ Anteprima Documento</h4>
                                <div class="preview-text">
                                    @(analysisResult.ExtractedText.Length > 500 
                                        ? analysisResult.ExtractedText.Substring(0, 500) + "..." 
                                        : analysisResult.ExtractedText)
                                </div>
                            </div>
                        }

                        @if (analysisResult.EmbeddingDimension > 0)
                        {
                            <div class="analysis-section">
                                <h4>üßÆ Embeddings Generati</h4>
                                <p>Embedding vettoriale con <strong>@analysisResult.EmbeddingDimension dimensioni</strong> generato per la ricerca semantica.</p>
                            </div>
                        }
                    }
                    
                    @if (analysisError)
                    {
                        <div class="analysis-error">
                            <p>‚ö†Ô∏è L'analisi AI non √® stata completata. Puoi comunque caricare il documento senza analisi automatica.</p>
                            <p>Possibili cause: AI provider non configurato o servizio non disponibile.</p>
                        </div>
                    }
                </div>
            }

            <!-- Category -->
            <div class="form-section">
                <h3>Category</h3>
                <div class="form-group">
                    <label>Document Category</label>
                    <InputText @bind-Value="uploadModel.Category" class="form-control" placeholder="e.g., Contracts, Reports, Technical..." />
                    <small class="form-help">Optional - helps organize your documents @(processingComplete && !string.IsNullOrEmpty(analysisResult?.SuggestedCategory) ? "(pre-compilato con suggerimento AI)" : "")</small>
                </div>
            </div>

            <!-- Visibility -->
            <div class="form-section">
                <h3>Visibility</h3>
                <div class="form-group">
                    <label>Who can access this document?</label>
                    <InputSelect @bind-Value="uploadModel.Visibility" class="form-control">
                        <option value="0">Private (Only me)</option>
                        <option value="1">Internal (My organization)</option>
                        <option value="2">Public (Everyone)</option>
                    </InputSelect>
                </div>
            </div>

            <!-- Notes -->
            <div class="form-section">
                <h3>Notes</h3>
                <div class="form-group">
                    <label>Additional Notes</label>
                    <InputTextArea @bind-Value="uploadModel.Notes" class="form-control" rows="3" placeholder="Add any notes about this document..." />
                </div>
            </div>

            <!-- Actions -->
            <div class="form-actions">
                <button type="submit" class="btn btn-primary" disabled="@(isUploading || selectedFile == null || !processingComplete)">
                    @if (isUploading)
                    {
                        <span>‚è≥ Uploading...</span>
                    }
                    else
                    {
                        <span>üì§ Upload Document</span>
                    }
                </button>
                <button type="button" class="btn btn-secondary" @onclick="Cancel" disabled="@isUploading">
                    Cancel
                </button>
            </div>

            @if (!processingComplete && selectedFile != null && !isAnalyzing)
            {
                <div class="help-text">
                    <small>
                        ‚ÑπÔ∏è Clicca prima su "üî¨ Analizza Documento" per abilitare il caricamento
                    </small>
                </div>
            }

            @if (isUploading)
            {
                <div class="upload-progress">
                    <div class="progress-bar">
                        <div class="progress-fill" style="width: @uploadProgress%"></div>
                    </div>
                    <p>@uploadProgress% - @uploadStatus</p>
                </div>
            }
        </EditForm>
    </div>
</div>

@code {
    private class UploadModel
    {
        public string Category { get; set; } = "General";
        public int Visibility { get; set; } = 0; // Private by default
        public string Notes { get; set; } = "";
    }

    private class DocumentAnalysisResult
    {
        public int Id { get; set; }
        public string? SuggestedCategory { get; set; }
        public string? CategoryReasoning { get; set; }
        public List<string>? Tags { get; set; }
        public string? ExtractedText { get; set; }
        public int EmbeddingDimension { get; set; }
    }

    private UploadModel uploadModel = new();
    private IBrowserFile? selectedFile;
    private bool isUploading = false;
    private bool isAnalyzing = false;
    private string errorMessage = "";
    private string successMessage = "";
    private int uploadProgress = 0;
    private string uploadStatus = "Preparing upload...";
    private DocumentAnalysisResult? analysisResult = null;
    private bool showAnalysisSection = false;
    private bool analysisError = false;
    private bool processingComplete = false;

    private void OnFileSelected(InputFileChangeEventArgs e)
    {
        selectedFile = e.File;
        errorMessage = "";
        successMessage = "";
        analysisResult = null;
        showAnalysisSection = false;
        processingComplete = false;
        analysisError = false;

        // Validate file size
        if (selectedFile.Size > 52428800) // 50 MB
        {
            errorMessage = "File size exceeds maximum limit of 50 MB";
            selectedFile = null;
        }
    }

    private async Task AnalyzeDocument()
    {
        if (selectedFile == null)
        {
            errorMessage = "Please select a file to analyze";
            return;
        }

        isAnalyzing = true;
        errorMessage = "";
        successMessage = "";
        analysisError = false;
        showAnalysisSection = true;
        StateHasChanged();

        try
        {
            var httpClient = HttpClientFactory.CreateClient("BackendAPI");

            // Create multipart form data
            using var content = new MultipartFormDataContent();

            // Add file
            using var fileStream = selectedFile.OpenReadStream(maxAllowedSize: 52428800);
            var streamContent = new StreamContent(fileStream);
            streamContent.Headers.ContentType = new MediaTypeHeaderValue(selectedFile.ContentType);
            content.Add(streamContent, "file", selectedFile.Name);

            Logger.LogInformation("Calling preview endpoint for file {FileName}", selectedFile.Name);

            // Call preview endpoint
            var response = await httpClient.PostAsync("Documents/preview", content);

            if (response.IsSuccessStatusCode)
            {
                var responseContent = await response.Content.ReadAsStringAsync();
                var options = new JsonSerializerOptions { PropertyNameCaseInsensitive = true };
                var previewResult = JsonSerializer.Deserialize<JsonElement>(responseContent, options);
                
                // Check if analysis succeeded
                if (previewResult.TryGetProperty("success", out var successProp) && successProp.GetBoolean())
                {
                    analysisResult = new DocumentAnalysisResult
                    {
                        Id = 0, // No ID yet since document is not uploaded
                        SuggestedCategory = previewResult.TryGetProperty("suggestedCategory", out var cat) ? cat.GetString() : null,
                        CategoryReasoning = previewResult.TryGetProperty("categoryReasoning", out var reason) ? reason.GetString() : null,
                        ExtractedText = previewResult.TryGetProperty("extractedText", out var text) ? text.GetString() : null,
                        EmbeddingDimension = previewResult.TryGetProperty("embeddingDimension", out var dim) ? dim.GetInt32() : 0
                    };

                    // Parse tags from JSON array
                    if (previewResult.TryGetProperty("tags", out var tagsJson) && tagsJson.ValueKind == JsonValueKind.Array)
                    {
                        var tagsList = new List<string>();
                        foreach (var tag in tagsJson.EnumerateArray())
                        {
                            var tagValue = tag.GetString();
                            if (!string.IsNullOrEmpty(tagValue))
                            {
                                tagsList.Add(tagValue);
                            }
                        }
                        analysisResult.Tags = tagsList;
                    }

                    // Update category if AI suggested one
                    if (!string.IsNullOrEmpty(analysisResult.SuggestedCategory))
                    {
                        uploadModel.Category = analysisResult.SuggestedCategory;
                    }

                    processingComplete = true;
                    successMessage = $"‚úÖ Analisi completata! Il documento '{selectedFile.Name}' √® pronto per essere caricato.";
                    
                    Logger.LogInformation("Preview analysis completed successfully for {FileName}", selectedFile.Name);
                }
                else
                {
                    // Analysis failed on server - allow upload anyway
                    var errorMsg = previewResult.TryGetProperty("error", out var errProp) ? errProp.GetString() : "Unknown error";
                    analysisError = true;
                    processingComplete = true; // Allow upload even if analysis fails
                    errorMessage = $"‚ö†Ô∏è L'analisi AI non √® stata completata: {errorMsg}. Puoi comunque procedere con il caricamento.";
                    Logger.LogWarning("Preview analysis failed: {Error}", errorMsg);
                }
            }
            else
            {
                var errorContent = await response.Content.ReadAsStringAsync();
                analysisError = true;
                processingComplete = true; // Allow upload even if analysis fails
                errorMessage = $"‚ö†Ô∏è Analisi non riuscita. Puoi comunque procedere con il caricamento.";
                Logger.LogError("Preview failed: {StatusCode} - {Error}", response.StatusCode, errorContent);
            }
        }
        catch (Exception ex)
        {
            analysisError = true;
            processingComplete = true; // Allow upload even if analysis fails
            errorMessage = "‚ö†Ô∏è Errore durante l'analisi. Puoi comunque procedere con il caricamento.";
            Logger.LogError(ex, "Error during preview analysis");
        }
        finally
        {
            isAnalyzing = false;
            StateHasChanged();
        }
    }

    private async Task HandleUpload()
    {
        if (selectedFile == null)
        {
            errorMessage = "Please select a file to upload";
            return;
        }

        isUploading = true;
        errorMessage = "";
        successMessage = ""; // Clear previous success message
        uploadProgress = 0;
        uploadStatus = "Preparing upload...";

        try
        {
            var httpClient = HttpClientFactory.CreateClient("BackendAPI");

            // Create multipart form data
            using var content = new MultipartFormDataContent();

            // Add file
            uploadStatus = "Reading file...";
            uploadProgress = 20;
            StateHasChanged();

            using var fileStream = selectedFile.OpenReadStream(maxAllowedSize: 52428800);
            var streamContent = new StreamContent(fileStream);
            streamContent.Headers.ContentType = new MediaTypeHeaderValue(selectedFile.ContentType);
            content.Add(streamContent, "file", selectedFile.Name);

            // Add other form fields
            content.Add(new StringContent(uploadModel.Category), "category");
            content.Add(new StringContent(uploadModel.Visibility.ToString()), "visibility");
            if (!string.IsNullOrEmpty(uploadModel.Notes))
            {
                content.Add(new StringContent(uploadModel.Notes), "notes");
            }

            uploadStatus = "Uploading to server...";
            uploadProgress = 50;
            StateHasChanged();

            // Upload to server
            var response = await httpClient.PostAsync("Documents/upload", content);

            uploadProgress = 90;
            uploadStatus = "Finalizing...";
            StateHasChanged();

            if (response.IsSuccessStatusCode)
            {
                uploadProgress = 100;
                uploadStatus = "Caricamento completato!";
                successMessage = $"‚úÖ Documento '{selectedFile.Name}' caricato con successo! Reindirizzamento in corso...";
                StateHasChanged();
                
                Logger.LogInformation("Document uploaded successfully: {FileName}", selectedFile.Name);

                // Parse response to get document ID
                try
                {
                    var responseContent = await response.Content.ReadAsStringAsync();
                    var options = new JsonSerializerOptions { PropertyNameCaseInsensitive = true };
                    var document = JsonSerializer.Deserialize<JsonElement>(responseContent, options);
                    
                    // Update the analysis result with the document ID so we can navigate to it
                    if (document.TryGetProperty("id", out var idProp) && analysisResult != null)
                    {
                        analysisResult.Id = idProp.GetInt32();
                    }
                }
                catch (Exception ex)
                {
                    Logger.LogError(ex, "Error parsing upload response");
                }
                
                // Navigate to documents list after showing success message
                await Task.Delay(1500);
                Navigation.NavigateTo("/documents");
            }
            else
            {
                var errorContent = await response.Content.ReadAsStringAsync();
                errorMessage = $"‚ö†Ô∏è Caricamento fallito. Riprova.";
                Logger.LogError("Upload failed: {StatusCode} - {Error}", response.StatusCode, errorContent);
            }
        }
        catch (Exception ex)
        {
            errorMessage = "‚ö†Ô∏è Errore durante il caricamento. Riprova.";
            Logger.LogError(ex, "Error uploading document");
        }
        finally
        {
            isUploading = false;
            StateHasChanged();
        }
    }

    private void Cancel()
    {
        Navigation.NavigateTo("/documents");
    }

    private void GoBack()
    {
        Navigation.NavigateTo("/documents");
    }

    private void ViewDocument()
    {
        if (analysisResult != null)
        {
            Navigation.NavigateTo($"/documents/{analysisResult.Id}");
        }
    }

    private void UploadAnother()
    {
        // Reset form
        selectedFile = null;
        analysisResult = null;
        showAnalysisSection = false;
        analysisError = false;
        successMessage = "";
        errorMessage = "";
        uploadModel = new UploadModel();
        StateHasChanged();
    }

    private string FormatFileSize(long bytes)
    {
        string[] sizes = { "B", "KB", "MB", "GB" };
        double len = bytes;
        int order = 0;
        while (len >= 1024 && order < sizes.Length - 1)
        {
            order++;
            len = len / 1024;
        }
        return $"{len:0.##} {sizes[order]}";
    }
}

