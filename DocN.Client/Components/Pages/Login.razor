@code {
    private LoginModel loginModel = new();
    private string? errorMessage;
    private bool isLoading = false;

    /// <summary>
    /// Handle login form submission
    /// Calls Server authentication API via IAuthenticationService
    /// </summary>
    private async Task HandleLogin()
    {
        try
        {
            isLoading = true;
            errorMessage = null;
            StateHasChanged();

            // Call Server API to authenticate
            var result = await AuthService.LoginAsync(
                loginModel.Email,
                loginModel.Password,
                loginModel.RememberMe
            );

            if (result.Success)
            {
                // Redirect to home page on successful login
                Navigation.NavigateTo("/", forceLoad: true);
            }
            else
            {
                // Display error message from Server
                errorMessage = result.ErrorMessage ?? "Login failed. Please try again.";
                
                // Handle specific status codes
                if (result.StatusCode == 423)
                {
                    errorMessage = "Account locked due to multiple failed attempts. Try again later.";
                }
                else if (result.StatusCode == 401)
                {
                    errorMessage = "Invalid email or password.";
                }
            }
        }
        catch (Exception ex)
        {
            errorMessage = "An unexpected error occurred. Please try again.";
            Console.WriteLine($"Login error: {ex.Message}");
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    protected override void OnInitialized()
    {
        // Check for error query parameter (e.g., from redirect)
        var uri = new Uri(Navigation.Uri);
        var query = System.Web.HttpUtility.ParseQueryString(uri.Query);
        var error = query["error"];

        errorMessage = error switch
        {
            "invalid" => "Invalid email or password.",
            "locked" => "Account locked due to multiple failed attempts. Try again later.",
            "2fa" => "Two-factor authentication is required.",
            _ => null
        };
    }

    /// <summary>
    /// Login form model with validation
    /// </summary>
    public class LoginModel
    {
        [Required(ErrorMessage = "Email is required")]
        [EmailAddress(ErrorMessage = "Invalid email format")]
        public string Email { get; set; } = "";

        [Required(ErrorMessage = "Password is required")]
        [MinLength(6, ErrorMessage = "Password must be at least 6 characters")]
        public string Password { get; set; } = "";

        public bool RememberMe { get; set; }
    }
}
