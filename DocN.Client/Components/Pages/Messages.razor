@page "/messages"
@using DocN.Data
@using DocN.Data.Models
@using Microsoft.EntityFrameworkCore
@rendermode InteractiveServer
@inject ApplicationDbContext DbContext
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject NavigationManager Navigation

<PageTitle>Messaggi - DocN</PageTitle>

<div class="messages-page">
    <div class="page-header">
        <h1>
            <span class="header-icon">üí¨</span>
            Elenco Messaggi e Conversazioni
        </h1>
        <p class="page-description">
            Consulta lo storico di tutte le conversazioni e i messaggi scambiati con l'AI
        </p>
    </div>

    <AuthorizeView>
        <Authorized>
            @if (isLoading)
            {
                <div class="loading-container">
                    <div class="loading-spinner"></div>
                    <p>Caricamento conversazioni...</p>
                </div>
            }
            else if (!conversations.Any())
            {
                <div class="empty-state">
                    <div class="empty-icon">üí≠</div>
                    <h3>Nessuna Conversazione</h3>
                    <p>Non ci sono ancora conversazioni. Inizia a chattare con l'AI per vedere i tuoi messaggi qui.</p>
                    <a href="/chat" class="btn btn-primary">
                        <span>üí¨ Vai alla Chat</span>
                    </a>
                </div>
            }
            else
            {
                <div class="filters-section">
                    <input type="text" 
                           @bind="searchQuery" 
                           @bind:event="oninput"
                           @onkeyup="FilterConversations"
                           placeholder="üîç Cerca nelle conversazioni..."
                           class="search-input" />
                    
                    <div class="filter-buttons">
                        <button class="@GetFilterClass("all")" @onclick='() => SetFilter("all")'>
                            Tutte (@totalConversations)
                        </button>
                        <button class="@GetFilterClass("starred")" @onclick='() => SetFilter("starred")'>
                            ‚≠ê Preferite (@starredCount)
                        </button>
                        <button class="@GetFilterClass("archived")" @onclick='() => SetFilter("archived")'>
                            üì¶ Archiviate (@archivedCount)
                        </button>
                    </div>
                </div>

                <div class="conversations-list">
                    @foreach (var conversation in filteredConversations)
                    {
                        <div class="conversation-card @(selectedConversationId == conversation.Id ? "selected" : "")"
                             @onclick="() => SelectConversation(conversation.Id)">
                            <div class="conversation-header">
                                <div class="conversation-title">
                                    @if (conversation.IsStarred)
                                    {
                                        <span class="star-icon">‚≠ê</span>
                                    }
                                    @if (conversation.IsArchived)
                                    {
                                        <span class="archive-icon">üì¶</span>
                                    }
                                    <h3>@(conversation.Title ?? "Conversazione senza titolo")</h3>
                                </div>
                                <div class="conversation-meta">
                                    <span class="message-count">@conversation.Messages.Count messaggi</span>
                                    <span class="date">@conversation.LastMessageAt.ToString("dd/MM/yyyy HH:mm")</span>
                                </div>
                            </div>

                            @if (selectedConversationId == conversation.Id)
                            {
                                <div class="messages-container">
                                    @foreach (var message in conversation.Messages.OrderBy(m => m.Timestamp))
                                    {
                                        <div class="message @(message.Role == "user" ? "user-message" : "assistant-message") @(message.IsError ? "error-message" : "")">
                                            <div class="message-header">
                                                <span class="message-role">@(message.Role == "user" ? "üë§ Utente" : "ü§ñ Assistente")</span>
                                                <span class="message-time">@message.Timestamp.ToString("HH:mm")</span>
                                            </div>
                                            <div class="message-content">
                                                @message.Content
                                            </div>
                                            @if (message.UserRating.HasValue)
                                            {
                                                <div class="message-rating">
                                                    Valutazione: @GetStars(message.UserRating.Value)
                                                </div>
                                            }
                                            @if (!string.IsNullOrEmpty(message.UserFeedback))
                                            {
                                                <div class="message-feedback">
                                                    <strong>Feedback:</strong> @message.UserFeedback
                                                </div>
                                            }
                                            @if (message.IsError)
                                            {
                                                <div class="error-indicator">
                                                    ‚ùå Messaggio con errore
                                                </div>
                                            }
                                        </div>
                                    }
                                </div>
                            }

                            @if (!string.IsNullOrEmpty(conversation.Tags))
                            {
                                <div class="conversation-tags">
                                    @foreach (var tag in conversation.Tags.Split(',', StringSplitOptions.RemoveEmptyEntries))
                                    {
                                        <span class="tag">@tag.Trim()</span>
                                    }
                                </div>
                            }
                        </div>
                    }
                </div>

                @if (!filteredConversations.Any() && conversations.Any())
                {
                    <div class="empty-state">
                        <div class="empty-icon">üîç</div>
                        <h3>Nessun Risultato</h3>
                        <p>Nessuna conversazione trovata con i criteri di ricerca selezionati.</p>
                    </div>
                }
            }
        </Authorized>
        <NotAuthorized>
            <div class="unauthorized-state">
                <div class="unauthorized-icon">üîí</div>
                <h2>Accesso Richiesto</h2>
                <p>Devi effettuare il login per visualizzare i tuoi messaggi.</p>
                <a href="/login" class="btn btn-primary">
                    <span>üîê Effettua il Login</span>
                </a>
            </div>
        </NotAuthorized>
    </AuthorizeView>
</div>

@code {
    private List<Conversation> conversations = new();
    private List<Conversation> filteredConversations = new();
    private bool isLoading = true;
    private string searchQuery = "";
    private string currentFilter = "all";
    private int? selectedConversationId = null;
    private int totalConversations = 0;
    private int starredCount = 0;
    private int archivedCount = 0;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        if (user.Identity?.IsAuthenticated == true && user.Identity?.Name != null)
        {
            var userId = user.Identity.Name;
            await LoadConversations(userId);
        }

        isLoading = false;
    }

    private async Task LoadConversations(string userId)
    {
        conversations = await DbContext.Conversations
            .Include(c => c.Messages)
            .Where(c => c.UserId == userId)
            .OrderByDescending(c => c.LastMessageAt)
            .ToListAsync();

        totalConversations = conversations.Count;
        starredCount = conversations.Count(c => c.IsStarred);
        archivedCount = conversations.Count(c => c.IsArchived);

        FilterConversations();
    }

    private void FilterConversations()
    {
        var filtered = conversations.AsEnumerable();

        // Apply search filter
        if (!string.IsNullOrWhiteSpace(searchQuery))
        {
            filtered = filtered.Where(c =>
                (c.Title?.Contains(searchQuery, StringComparison.OrdinalIgnoreCase) ?? false) ||
                c.Messages.Any(m => m.Content.Contains(searchQuery, StringComparison.OrdinalIgnoreCase))
            );
        }

        // Apply category filter
        filtered = currentFilter switch
        {
            "starred" => filtered.Where(c => c.IsStarred),
            "archived" => filtered.Where(c => c.IsArchived),
            _ => filtered
        };

        filteredConversations = filtered.ToList();
    }

    private void SetFilter(string filter)
    {
        currentFilter = filter;
        FilterConversations();
    }

    private string GetFilterClass(string filter)
    {
        return filter == currentFilter ? "filter-btn active" : "filter-btn";
    }

    private void SelectConversation(int conversationId)
    {
        if (selectedConversationId == conversationId)
        {
            selectedConversationId = null;
        }
        else
        {
            selectedConversationId = conversationId;
        }
    }

    private string GetStars(int rating)
    {
        return new string('‚≠ê', rating);
    }
}

