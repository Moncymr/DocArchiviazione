@using DocN.Data.Services
@using DocN.Data.Models
@using System.Security.Claims
@inject IDocumentService DocumentService
@inject ILogger<RecentDocumentsWidget> Logger
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject NavigationManager NavigationManager

<div class="widget-card recent-documents-widget">
    <div class="widget-header">
        <h3>ðŸ“„ @Title</h3>
    </div>

    @if (_loading)
    {
        <div class="widget-loading">Caricamento...</div>
    }
    else if (_error != null)
    {
        <div class="widget-error">@_error</div>
    }
    else if (_documents?.Any() == true)
    {
        <div class="documents-list">
            @foreach (var document in _documents)
            {
                <div class="document-item" @onclick="() => NavigateToDocument(document.Id)">
                    <div class="document-icon">@GetFileIcon(document.ContentType ?? "")</div>
                    <div class="document-info">
                        <div class="document-name">@document.FileName</div>
                        <div class="document-meta">
                            @document.UploadedAt.ToString("dd MMM yyyy HH:mm")
                            @if (!string.IsNullOrEmpty(document.ActualCategory))
                            {
                                <span> â€¢ @document.ActualCategory</span>
                            }
                        </div>
                    </div>
                    @if (document.FileSize > 0)
                    {
                        <div class="document-size">@FormatFileSize(document.FileSize)</div>
                    }
                </div>
            }
        </div>
    }
    else
    {
        <div class="widget-empty">Nessun documento recente</div>
    }
</div>

@code {
    [Parameter]
    public string Title { get; set; } = "Documenti Recenti";

    [Parameter]
    public int WidgetId { get; set; }

    [Parameter]
    public int MaxCount { get; set; } = 5;

    private List<Document>? _documents;
    private bool _loading = true;
    private string? _error;
    private string? _userId;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        _userId = authState.User.FindFirstValue(ClaimTypes.NameIdentifier);
        await LoadDocumentsAsync();
    }

    private async Task LoadDocumentsAsync()
    {
        try
        {
            _loading = true;
            _error = null;

            if (string.IsNullOrEmpty(_userId))
            {
                _error = "Utente non autenticato";
                return;
            }

            _documents = (await DocumentService.GetUserDocumentsAsync(_userId, 1, MaxCount))
                .OrderByDescending(d => d.UploadedAt)
                .ToList();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error loading recent documents");
            _error = "Errore nel caricamento documenti";
        }
        finally
        {
            _loading = false;
        }
    }

    private void NavigateToDocument(int documentId)
    {
        NavigationManager.NavigateTo($"/documents/{documentId}");
    }

    private string GetFileIcon(string contentType)
    {
        return contentType.ToLower() switch
        {
            var ct when ct.Contains("pdf") => "ðŸ“•",
            var ct when ct.Contains("word") || ct.Contains("docx") => "ðŸ“˜",
            var ct when ct.Contains("excel") || ct.Contains("spreadsheet") => "ðŸ“—",
            var ct when ct.Contains("image") => "ðŸ–¼ï¸",
            var ct when ct.Contains("text") => "ðŸ“„",
            _ => "ðŸ“Ž"
        };
    }

    private string FormatFileSize(long bytes)
    {
        string[] sizes = { "B", "KB", "MB", "GB", "TB" };
        double len = bytes;
        int order = 0;
        while (len >= 1024 && order < sizes.Length - 1)
        {
            order++;
            len = len / 1024;
        }
        return $"{len:0.##} {sizes[order]}";
    }
}

