@using DocN.Data.Services
@using DocN.Data.Models
@using System.Security.Claims
@inject IUserActivityService ActivityService
@inject ILogger<ActivityFeedWidget> Logger
@inject AuthenticationStateProvider AuthenticationStateProvider

<div class="widget-card activity-feed-widget">
    <div class="widget-header">
        <h3>ðŸ“ˆ @Title</h3>
    </div>

    @if (_loading)
    {
        <div class="widget-loading">Caricamento...</div>
    }
    else if (_error != null)
    {
        <div class="widget-error">@_error</div>
    }
    else if (_activities?.Any() == true)
    {
        <div class="activity-list">
            @foreach (var activity in _activities)
            {
                <div class="activity-item">
                    <div class="activity-icon">@GetActivityIcon(activity.ActivityType)</div>
                    <div class="activity-content">
                        <div class="activity-description">@activity.Description</div>
                        <div class="activity-time">@GetRelativeTime(activity.CreatedAt)</div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="widget-empty">Nessuna attivitÃ  recente</div>
    }
</div>

@code {
    [Parameter]
    public string Title { get; set; } = "AttivitÃ  Recenti";

    [Parameter]
    public int WidgetId { get; set; }

    [Parameter]
    public int MaxCount { get; set; } = 10;

    private List<UserActivity>? _activities;
    private bool _loading = true;
    private string? _error;
    private string? _userId;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        _userId = authState.User.FindFirstValue(ClaimTypes.NameIdentifier);
        await LoadActivitiesAsync();
    }

    private async Task LoadActivitiesAsync()
    {
        try
        {
            _loading = true;
            _error = null;

            if (string.IsNullOrEmpty(_userId))
            {
                _error = "Utente non autenticato";
                return;
            }

            _activities = (await ActivityService.GetUserActivitiesAsync(_userId, MaxCount))
                .OrderByDescending(a => a.CreatedAt)
                .ToList();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error loading user activities");
            _error = "Errore nel caricamento attivitÃ ";
        }
        finally
        {
            _loading = false;
        }
    }

    private string GetActivityIcon(string activityType)
    {
        return activityType.ToLower() switch
        {
            "upload" => "â¬†ï¸",
            "download" => "â¬‡ï¸",
            "view" => "ðŸ‘ï¸",
            "edit" => "âœï¸",
            "delete" => "ðŸ—‘ï¸",
            "share" => "ðŸ”—",
            "search" => "ðŸ”",
            _ => "â€¢"
        };
    }

    private string GetRelativeTime(DateTime timestamp)
    {
        var timeSpan = DateTime.UtcNow - timestamp;
        
        if (timeSpan.TotalMinutes < 1)
            return "Proprio ora";
        if (timeSpan.TotalMinutes < 60)
            return $"{(int)timeSpan.TotalMinutes} minut{((int)timeSpan.TotalMinutes != 1 ? "i" : "o")} fa";
        if (timeSpan.TotalHours < 24)
            return $"{(int)timeSpan.TotalHours} or{((int)timeSpan.TotalHours != 1 ? "e" : "a")} fa";
        if (timeSpan.TotalDays < 7)
            return $"{(int)timeSpan.TotalDays} giorn{((int)timeSpan.TotalDays != 1 ? "i" : "o")} fa";
        if (timeSpan.TotalDays < 30)
            return $"{(int)(timeSpan.TotalDays / 7)} settiman{((int)(timeSpan.TotalDays / 7) != 1 ? "e" : "a")} fa";
        
        return timestamp.ToString("dd MMM yyyy");
    }
}

